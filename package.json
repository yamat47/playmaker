    "test:coverage": "vitest --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "konva": "^9.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^18.2.10",
    "zustand": "^4.4.7"
